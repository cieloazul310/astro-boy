---
import { SarkaraLayout, Paper } from "@cieloazul310/astro-sarkara";
import Analytics from "../components/Analytics.astro";
import Ad from "../components/ads/ad.astro";
import AdScript from "../components/ads/script.astro";
import { siteMetadata, menu } from "../data";

interface Props {
  frontmatter?: {
    title?: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
---

<SarkaraLayout
  siteMetadata={siteMetadata}
  menu={menu}
  title={frontmatter?.title}
  description={frontmatter?.description}
>
  <Analytics slot="top-of-head" />
  <Paper>
    <slot />
  </Paper>
  <Ad />
  <Ad variant="display-2" slot="sidebar-bottom" />
  <AdScript slot="bottom-of-body" />
</SarkaraLayout>
