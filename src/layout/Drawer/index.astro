---
import { css, cx } from "../../../styled-system/css";
import { flex, vstack } from "../../../styled-system/patterns";
import Header from "./Header.astro";
import Footer from "./Footer.astro";

interface Props {
  siteTitle?: string;
}

const { siteTitle } = Astro.props;
---

<div class="drawer">
  <div
    class={cx(
      css({
        opacity: 0,
        display: "none",
        width: "100%",
        height: "100%",
        position: "fixed",
        top: 0,
        left: 0,
        bgct: "bg.dark/40",
        zIndex: "drawerBackdrop",
        ".drawer-open > &": {
          display: "block",
          opacity: 1,
        },
      }),
      "drawer-handler",
    )}
  >
  </div>
  <div
    class={flex({
      position: "fixed",
      bottom: "-75vh",
      left: 0,
      zIndex: "drawer",
      background: { base: "bg", _dark: "primary.950" },
      width: "100%",
      height: "75vh",
      shadow: "lg",
      roundedTop: "xl",
      transition: "bottom .25s",
      direction: "column",
      alignItems: "stretch",
      ".drawer-open > &": {
        bottom: 0,
      },
    })}
  >
    <Header siteTitle={siteTitle} />
    <div class={css({ flexGrow: 1, overflowY: "auto", px: 4 })}>
      <div class={vstack({ gap: 2, alignItems: "stretch" })}>
        <slot />
        <slot name="drawer-contents" />
      </div>
    </div>
    <Footer />
  </div>
</div>
<script>
  import "../../scripts/drawer.ts";
</script>
