---
/* eslint-disable-next-line import/no-unresolved */
import { ClientRouter } from "astro:transitions";
import { SarkaraLayout, Paper } from "@cieloazul310/astro-sarkara";
import Analytics from "@/components/analytics.astro";
import Ad from "@/components/ad.astro";
import { siteMetadata, menu } from "@/data";

import "@/index.css";

interface Props {
  frontmatter?: {
    title?: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
---

<SarkaraLayout
  siteMetadata={siteMetadata}
  menu={menu}
  title={frontmatter?.title}
  description={frontmatter?.description}
>
  <Analytics slot="top-of-head" />
  <ClientRouter slot="bottom-of-head" />
  <Paper>
    <slot />
  </Paper>
  <Ad />
  <Ad variant="display-2" slot="sidebar-bottom" disableMargin />
</SarkaraLayout>
