---
import Header from "./Header.astro";
import Sidebar from "./Sidebar/index.astro";
import Drawer from "./Drawer/index.astro";
import Footer from "./Footer.astro";
import Jumbotron from "./Jumbotron.astro";
import Fab from "./Fab.astro";
import PaperLink from "../components/PaperLink.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;
const siteTitle = "Astro Boy";
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} - ${siteTitle}` : siteTitle}</title>
  </head>
  <body>
    <Header siteTitle={siteTitle} />
    <main>
      <article>
        <header>
          <Jumbotron>
            <slot name="jumbotron" />
          </Jumbotron>
        </header>
        <div class="wrapper">
          <div class="content">
            <slot />
            <PaperLink href="/">Top</PaperLink>
          </div>
          <aside class="sidebar">
            <Sidebar>
              <slot slot="sidebar-top" name="sidebar-top" />
              <slot slot="sidebar-bottom" name="sidebar-bottom" />
            </Sidebar>
          </aside>
        </div>
      </article>
    </main>
    <Footer siteTitle={siteTitle} />
    <Fab />
    <Drawer />
  </body>
</html>
<style is:global>
  :root {
    --bg-light: 255, 255, 255;
    --bg-dark: 33, 33, 33;
    --text-white: 250, 250, 255;
    --text-black: 10, 10, 20;
    --primary: 20, 120, 225;
    --secondary: 240, 200, 40;
    --content-max-width: 1200px;
    --sidebar-width: 320px;
    --header-height: 56px;
    --breakpoint-xs: 480px;
    --breakpoint-sm: 600px;
    --breakpoint-md: 960px;
    --breakpoint-lg: 1280px;
    --border-radius: 16px;
    --spacing: 16px;
    --spacing-half: 8px;
    --z-indexes-fab: 100;
    --z-indexes-drawer: 200;
    --shadow-default: 0 0 4px rgba(0, 0, 0, 0.2);
    --shadow-hover: 0 0 8px rgba(0, 0, 0, 0.2);
    --duration: 0.25s;
    --alpha: 0.12;
    --alpha-half: 0.06;
    --alpha-double: 0.24;
  }
  html {
    font-family: system-ui, sans-serif;
    background: rgb(var(--bg-light));
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  .wrapper {
    display: flex;
    margin: 0 auto;
    max-width: var(--content-max-width);
    padding: var(--spacing);
    gap: var(--spacing);
  }
  .content {
    flex-grow: 1;
    max-width: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--spacing);
  }
  .sidebar {
    flex-shrink: 0;
    width: var(--sidebar-width);
    display: flex;
    flex-direction: column;
    gap: var(--spacing);
  }
  @media screen and (max-width: 480px) {
    .sidebar {
      display: none;
    }
  }
</style>
