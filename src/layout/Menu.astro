---
import { vstack } from "../../styled-system/patterns";
import PaperLink from "../components/PaperLink.astro";

const menu = [
  { name: "Top", path: "/" },
  { name: "About", path: "/about/" },
  { name: "Markdown Posts", path: "/posts/" },
  { name: "CMS Posts", path: "/microcms/" },
];
---

<nav
  class={vstack({
    gap: 2,
    alignItems: "stretch",
  })}
>
  {menu.map(({ name, path }) => <PaperLink href={path}>{name}</PaperLink>)}
</nav>
