---
import { css } from "../../styled-system/css";
import { gradientBox } from "../../styled-system/patterns";

interface Props {
  siteTitle: string;
}

const { siteTitle } = Astro.props;
---

<header
  class={gradientBox({
    position: "sticky",
    top: 0,
    height: "headerHeight",
    px: 4,
    display: "flex",
    alignItems: "center",
    justifyContent: ["center", "start"],
    zIndex: 1,
  })}
>
  <slot>
    <a
      href="/"
      class={css({
        color: "white",
        _hover: {
          color: "primary.200",
          textDecoration: "none",
        },
      })}
    >
      <h1 class={css({ fontSize: "xl" })}>{siteTitle}</h1>
    </a>
    <button class="toggle-color-mode">color</button>
  </slot>
</header>
