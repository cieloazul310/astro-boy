---
import Hamburger from "../components/Hamburger.astro";

interface Props {
  siteTitle: string;
}

const { siteTitle } = Astro.props;
---

<header>
  <Hamburger />
  <h1>{siteTitle}</h1>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    height: var(--header-height);
    padding: 0px 8px;
    display: flex;
    align-items: center;
    background-image: linear-gradient(
      90deg,
      rgb(var(--primary)),
      rgba(var(--secondary), 0.4)
    );
  }
  h1 {
    font-size: 1.25rem;
    font-weight: bold;
    margin: auto;
  }
</style>
