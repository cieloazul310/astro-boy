---
interface Props {
  siteTitle: string;
}

const { siteTitle } = Astro.props;
---

<header>
  <h1><a href="/" class="header-link">{siteTitle}</a></h1>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    height: var(--header-height);
    padding: 0px 16px;
    display: flex;
    align-items: center;
    background-image: linear-gradient(
      90deg,
      rgb(var(--primary)),
      rgba(var(--secondary), 0.4)
    );
    color: rgb(var(--text-white));
    backdrop-filter: blur(2px);
  }
  header > h1 {
    font-size: 1.25rem;
    font-weight: bold;
    margin: auto;
    flex-grow: 1;
  }
  .header-link {
    color: inherit;
    text-decoration: none;
  }
  .header-link:hover {
    color: inherit;
    text-decoration: underline;
  }
</style>
