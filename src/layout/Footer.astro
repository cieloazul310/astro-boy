---
interface Props {
  siteTitle: string;
}

const { siteTitle } = Astro.props;
---

<footer>
  <small>{siteTitle}</small>
</footer>
<style>
  footer {
    background-image: linear-gradient(
      rgb(var(--bg-light)) 60%,
      rgb(var(--primary))
    );
    padding: 48px 8px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  footer > small {
    font-size: 1rem;
    font-weight: bold;
  }
</style>
