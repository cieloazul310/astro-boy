---
import { PaperLink } from "@cieloazul310/astro-sarkara";
import { vstack } from "@cieloazul310/sarkara-css/patterns";
import { getCategories } from "../../utils";

const categories = await getCategories({ fields: ["id", "name"] });
---

<nav class={vstack({ gap: 2, alignItems: "stretch" })}>
  {
    categories.contents.map(({ id, name }) => (
      <PaperLink href={`/microcms/categories/${id}`}>{name}</PaperLink>
    ))
  }
</nav>
