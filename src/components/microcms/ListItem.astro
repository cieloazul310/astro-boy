---
import { ArticleListItem, Badge } from "@cieloazul310/astro-sarkara";
import { slugify, parseDate } from "../../utils";
import type { MicrocmsBlogs } from "../../types";

interface Props {
  blog: Pick<
    MicrocmsBlogs,
    "title" | "category" | "eyecatch" | "publishedAt" | "id"
  >;
}
const { blog } = Astro.props;
---

<ArticleListItem
  href={slugify("microcms", blog)}
  title={blog.title}
  headerText={parseDate(blog.publishedAt)}
  image={blog.eyecatch?.url}
  imagePlaceholder="CMS"
>
  {
    blog.category && (
      <Badge slot="badge" size="xs">
        {blog.category.name}
      </Badge>
    )
  }
</ArticleListItem>
