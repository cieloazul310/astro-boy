---
import type { CollectionEntry } from "astro:content";
import { ArticleListItem, Badge } from "@cieloazul310/astro-sarkara";
import { slugify, parseDate } from "@/utils";

interface Props {
  post: CollectionEntry<"microCMSPost">;
}
const { post } = Astro.props;
const { title, publishedAt, eyecatch, category } = post.data;
---

<ArticleListItem
  href={slugify("microcms", post)}
  title={title}
  headerText={parseDate(publishedAt)}
  image={eyecatch?.url}
  imagePlaceholder="CMS"
>
  {
    category && (
      <Badge slot="badge" size="xs">
        {category.name}
      </Badge>
    )
  }
</ArticleListItem>
