---
import Layout from "../layout/index.astro";
import Paper from "../components/Paper.astro";

const allPosts = await Astro.glob("../pages/posts/*.md");

interface Props {
  frontmatter: {
    title: string | null;
    date: string | null;
  } | null;
}

const { frontmatter } = Astro.props;
---

<Layout title="Post">
  <h1 slot="jumbotron">{frontmatter?.title}</h1>
  <Paper>
    <slot />
  </Paper>
  <Paper slot="sidebar">
    <p>記事一覧</p>
    <ul>
      {
        allPosts.map((post) => (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        ))
      }
    </ul>
  </Paper>
</Layout>
